{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "../../dist/client",
        "baseUrl": ".",
        "paths": {
            "/build/three.module.js": ["../../node_modules/three/src/Three"],   // Don't confuse this with the line in the server.ts **this line is for client-sdie compilation so that IDE just knows the Three.js definition and will not throw any error
            // "/@tensorflow/tfjs": ["../../node_modules/@tensorflow/tfjs/dist"]
        },
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts"
    ]
}